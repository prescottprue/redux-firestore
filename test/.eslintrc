extends: ../.eslintrc

globals:
  sinon: true
  expect: true
  after: true
  afterEach: true
  before: true
  beforeEach: true
  it: true
  describe: true
  Firebase: true
  firebase: true
  fbConfig: true
  uid: true

rules:
  no-unused-expressions: [0]
  new-cap: 0

settings:
  import/resolver:
    node:
      moduleDirectory:
        - '../node_modules'
        - '../src'
